<launch>
    <group ns = "action_template">
        <!-- client -->
        <node pkg="ros_template_programs" type="action_client_template" name="client" launch-prefix="xterm -font r16 -fg floralwhite -bg darkslateblue -e">
            <rosparam>
                target_time : 5.0
            </rosparam>
        </node>
        <!-- server -->
        <node pkg="ros_template_programs" type="action_server_template" name="server" launch-prefix="xterm -font r16 -fg floralwhite -bg darkslateblue -e">
        </node>
    </group>
</launch>
